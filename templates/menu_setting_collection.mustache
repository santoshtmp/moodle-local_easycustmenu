{{!
    @template local_easycustmenu/menu_setting_collection

    Example context (json):
    {
        "values"={
        }
    }

}}

<div class="menu-setting-content" id="menu_setting_collection">
    {{#core_custommenuitems}}
        <div class="default-custom-menu-exist">
        {{#load_core_custommenuitems}}
            <p>Default core menu is loaded withe existing menu.</p>
        {{/load_core_custommenuitems}}
        </div>
    {{/core_custommenuitems}}
    <form action="{{menu_setting_form_action}}" method="post">
        <div class="menu-wrapper">
            <div class="menu menu-draggable-list" total-menu="">
                {{#values}}
                    {{> local_easycustmenu/menu_item_wrapper }}             
                {{/values}}
            </div>
            <div class="action-add-menu">
                <button type="button" class="btn btn-primary btn-add-menu"> Add Menu</button>
            </div>
        </div>
        <div class="form-input-hidden">
            <input type="hidden" id="primary_menu_sesskey" name="sesskey" value="">
            <script>
                document.getElementById("primary_menu_sesskey").value = M.cfg.sesskey;
            </script>
        </div>

       <div class="btn-wrraper">
            <button type="submit" class="btn btn-primary">Save Menu</button>
            {{#core_custommenuitems}}
                    <a href="{{menu_setting_form_action}}?load_core_custommenuitems=1" class="btn btn-secondary btn-load_core_custommenuitems">
                        Load core custommenuitems
                    </a>
            {{/core_custommenuitems}}
       </div>
    </form>
</div>
